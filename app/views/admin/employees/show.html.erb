<h1>Employee</h1>
<div class="card o-hidden border-0 shadow-lg my-5">
  <div class="card-body p-0">
    <div class="row">
      <div class="col-lg-6">
        <div class="p-5">
          <div class="form-group">
            <label>Name:</label>
            <span><%= @emp.employee_name ? @emp.employee_name : "N/A" %></span>
          </div>
          <div class="form-group">
            <label>Phone:</label>
            <span><%= @emp.phone_number ? @emp.phone_number : "N/A" %></span>
          </div>
          <div class="form-group">
            <label>No of Nominees:</label>
            <span><%= "N/A"  %></span>
          </div>
          <div class="form-group">
            <label>Dob:</label>
            <span><%= @emp.dob ? @emp.dob : "N/A" %></span>
          </div>
          <div class="form-group">
            <%= link_to "Edit", edit_admin_employee_path(@emp.id), class: "btn btn-primary btn-user btnSub" %>
            <%= link_to "Cancel", admin_employees_path, class: "btn btn-primary btn-user btnSub" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
