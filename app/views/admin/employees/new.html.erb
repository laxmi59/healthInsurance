<%= render "layouts/errors", object: @emp %>
<h1>Add New Employee</h1>
<div class="card o-hidden border-0 shadow-lg my-5">
  <div class="card-body p-0">
    <div class="row">
      <div class="col-lg-6">
        <div class="p-5">
          <%= form_for @emp, class:'user', url: admin_employees_path do |f| %>
            <div class="form-group">
              <%= f.label 'email' %>
              <%= f.text_field :email, class:"form-control form-control-user" %>
              <%= f.hidden_field :last_modified_by, :value => Current.user.employee_name  %>
              <%= f.hidden_field :is_active, :value => "1"  %>
            </div>
            <div class="form-group">
              <%= f.label 'password' %>
              <%= f.password_field :password, class:"form-control form-control-user"  %>
            </div>
            <div class="form-group">
              <%= f.label 'password_confirmation' %>
              <%= f.password_field :password_confirmation, class:"form-control form-control-user"  %>
            </div>
            <div class="form-group">
              <%= f.label 'role' %>
              <%= f.select "role_id", options_from_collection_for_select(Role.all, "id", "name", f.object.role_id), include_blank: 'select', class:"form-control form-control-user"  %>
            </div>
            <div class="form-group">
              <%= f.label 'employee_id' %>
              <%= f.text_field :employee_id, class:"form-control form-control-user"  %>
            </div>
            <div class="form-group">
              <%= f.submit ' Submit', class: "btn btn-primary btn-user btnSub" %>
              <%= link_to "Cancel", admin_employees_path, class: "btn btn-primary btn-user btnSub" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
