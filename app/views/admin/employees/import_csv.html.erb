<%= render "layouts/errors", object: @emp %>
<h1>Import Employee</h1>
<div class="card o-hidden border-0 shadow-lg my-5">
  <div class="card-body p-0">
    <div class="row">
      <div class="col-lg-6">
        <div class="p-5">
          <%= form_for @emp,  class:'user', url: import_csv_create_admin_employees_path do |f| %>
            <div class="form-group">
              <%= f.label :file, "Upload CSV File" %>
              <%= f.file_field :file, class: 'form-control-file', required: true %>
            </div>
            <div class="form-group">
              <%= f.submit 'Upload CSV', class: "btn btn-primary btn-user btnSub" %>
              <%= link_to "Cancel", admin_employees_path, class: "btn btn-primary btn-user btnSub" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
