<%#= @emp.inspect%>
<h1>My Account</h1>
<div class="card o-hidden border-0 shadow-lg my-5">
  <div class="card-body p-0">
    <div class="row">
      <div class="col-lg-6">
        <div class="p-5">
          <table width="100%"><tr><td><h1>Company Details</h1></td>
          <td class="float-right">&nbsp;</td>
          </tr></table>
          <div class="form-group">
            <label>Employee Id:</label>
            <span><%= @emp.employee_id ? @emp.employee_id : "N/A" %></span>
          </div>
          <div class="form-group">
            <label>Job Title:</label>
            <span><%= @emp.job_title ? @emp.job_title : "N/A" %></span>
          </div>
          <div class="form-group">
            <label>Email:</label>
            <span><%= @emp.email ? @emp.email : "N/A" %></span>
          </div>
          <div class="form-group">
            <label>Role:</label>
            <span><%= @emp.role ? @emp.role.name : "N/A" %></span>
          </div>
          <div class="form-group">
            <label>Status:</label>
            <span><%= @emp.is_active && @emp.is_active == 1 ? "Active" : "Inactive"  %></span>
          </div>
        </div>

        <div class="p-5">
          <table width="100%"><tr><td><h1>Address Details</h1></td>
          <td class="float-right">
            <%= link_to "Edit", edit_employee_path(@emp.id), class: "btn btn-primary btn-user btnSub" %>
          </td>
          </tr></table>
          <div class="form-group">
            <label>Mobile Number:</label>
            <span><%= @emp.phone_number ? @emp.phone_number : "N/A" %></span>
          </div>
          <div class="form-group">
            <label>Location:</label>
            <span><%= @emp.location ? @emp.location.name : "N/A" %></span>
          </div>
        </div>

        <div class="p-5">
          <table width="100%"><tr><td><h1>Personal Details</h1></td>
          <td class="float-right">
            <%= link_to "Edit", edit_personal_employee_path(@emp.id), class: "btn btn-primary btn-user btnSub" %>
          </td>
          </tr></table>
          <div class="form-group">
            <label>First Name:</label>
            <span><%= @emp.employee_name ? @emp.employee_name : "N/A" %></span>
          </div>
          <div class="form-group">
            <label>Date of Birth:</label>
            <span><%= @emp.dob ? @emp.dob : "N/A" %></span>
          </div>
          <div class="form-group">
            <label>Gender:</label>
            <span><%= @emp.gender ? @emp.gender.name : "N/A"  %></span>
          </div>
          <div class="form-group">
            <label>Marital Status:</label>
            <span><%= @emp.marital_status ? @emp.marital_status.name : "N/A" %></span>
          </div>
          <div class="form-group">
            <label>Blood Group:</label>
            <span><%= @emp.blood_group ? @emp.blood_group.name : "N/A" %></span>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>
